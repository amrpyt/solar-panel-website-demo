---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<svg class={className} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Wrench -->
  <path d="M 35 15 L 40 10 L 45 15 L 50 10 L 55 15 L 48 22 L 42 16 Z" fill="#6b7280" stroke="#4b5563" stroke-width="1.5"/>
  <rect x="30" y="20" width="6" height="25" fill="#6b7280" stroke="#4b5563" stroke-width="1.5" transform="rotate(-45 33 32)"/>
  
  <!-- Hammer -->
  <rect x="20" y="35" width="5" height="20" fill="#8b5cf6" stroke="#7c3aed" stroke-width="1.5"/>
  <rect x="15" y="32" width="15" height="6" fill="#8b5cf6" stroke="#7c3aed" stroke-width="1.5"/>
  
  <!-- Checkmark circle -->
  <circle cx="45" cy="45" r="12" fill="#22c55e" opacity="0.2"/>
  <circle cx="45" cy="45" r="10" stroke="#22c55e" stroke-width="2" fill="none"/>
  <path d="M 40 45 L 43 48 L 50 41" stroke="#22c55e" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
</svg>
