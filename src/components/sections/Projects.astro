---
import SectionTitle from '../SectionTitle.astro';

const projects = [
  {
    title: 'Residential Solar Installation',
    category: 'Residential',
    capacity: '8.5 kW',
    location: 'Green Valley',
    description: 'Complete rooftop solar system for a family home, reducing energy costs by 80%.',
    image: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)',
  },
  {
    title: 'Commercial Solar Farm',
    category: 'Commercial',
    capacity: '250 kW',
    location: 'Tech Park',
    description: 'Large-scale ground-mounted solar installation for a business campus.',
    image: 'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)',
  },
  {
    title: 'Industrial Solar Solution',
    category: 'Industrial',
    capacity: '500 kW',
    location: 'Manufacturing District',
    description: 'High-capacity solar system for a manufacturing facility, achieving energy independence.',
    image: 'linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)',
  },
  {
    title: 'Community Solar Project',
    category: 'Community',
    capacity: '150 kW',
    location: 'Sunny Heights',
    description: 'Shared solar installation serving multiple residential units in an eco-community.',
    image: 'linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)',
  },
  {
    title: 'Agricultural Solar System',
    category: 'Agricultural',
    capacity: '75 kW',
    location: 'Green Farms',
    description: 'Solar-powered irrigation and farm operations, reducing operational costs.',
    image: 'linear-gradient(135deg, #fa709a 0%, #fee140 100%)',
  },
  {
    title: 'Educational Solar Installation',
    category: 'Educational',
    capacity: '100 kW',
    location: 'Riverside School',
    description: 'Solar system for a school campus with integrated learning displays.',
    image: 'linear-gradient(135deg, #30cfd0 0%, #330867 100%)',
  },
];
---

<section id="projects" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <SectionTitle
      subtitle="Our Work"
      title="Featured Projects"
      description="Explore our portfolio of successful solar installations across residential, commercial, and industrial sectors."
    />

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mt-12">
      {projects.map((project, index) => (
        <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-500 animate-on-scroll" style={`animation-delay: ${index * 0.1}s`}>
          <!-- Project Image/Background -->
          <div 
            class="h-64 relative overflow-hidden"
            style={`background: ${project.image}`}
          >
            <!-- Solar Panel Grid Overlay -->
            <svg class="absolute inset-0 w-full h-full opacity-20" viewBox="0 0 100 100">
              <defs>
                <pattern id={`grid-${index}`} x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                  <rect width="20" height="20" fill="none" stroke="white" stroke-width="0.5"/>
                </pattern>
              </defs>
              <rect width="100" height="100" fill={`url(#grid-${index})`}/>
            </svg>
            
            <!-- Category Badge -->
            <div class="absolute top-4 left-4">
              <span class="bg-white/90 backdrop-blur-sm text-gray-900 px-3 py-1 rounded-full text-sm font-semibold">
                {project.category}
              </span>
            </div>

            <!-- Capacity Badge -->
            <div class="absolute top-4 right-4">
              <span class="bg-primary-600/90 backdrop-blur-sm text-white px-3 py-1 rounded-full text-sm font-semibold">
                {project.capacity}
              </span>
            </div>
          </div>

          <!-- Project Info -->
          <div class="bg-white p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">
              {project.title}
            </h3>
            <div class="flex items-center text-sm text-gray-500 mb-3">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              {project.location}
            </div>
            <p class="text-gray-600 text-sm">
              {project.description}
            </p>
          </div>

          <!-- Hover Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
            <button class="text-white font-semibold flex items-center gap-2 transform translate-y-4 group-hover:translate-y-0 transition-transform">
              View Details
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
