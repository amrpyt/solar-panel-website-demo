---

<section id="testimonials" class="py-20 bg-gradient-to-b from-gray-50 to-white">
  <div class="container mx-auto px-4">
    <SectionTitle
      subtitle="Testimonials"
      title="What Our Clients Say"
      description="Don't just take our word for it. Here's what our satisfied customers have to say about their experience."
    />

    <div class="grid md:grid-cols-3 gap-8 mt-12">
      {testimonials.map((testimonial, index) => (
        <Card class="animate-on-scroll relative" style={`animation-delay: ${index * 0.15}s`}>
          <!-- Quote Icon -->
          <div class="absolute top-6 right-6 text-primary-200 opacity-50">
            <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
            </svg>
          </div>

          <!-- Stars -->
          <div class="flex gap-1 mb-4">
            {[...Array(testimonial.rating)].map(() => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>

          <p class="text-gray-600 mb-6 italic">"{testimonial.content}"</p>

          <div class="flex items-center gap-4 pt-4 border-t">
            <div class="text-4xl">{testimonial.image}</div>
            <div>
              <div class="font-bold text-gray-900">{testimonial.name}</div>
              <div class="text-sm text-gray-500">{testimonial.role}</div>
            </div>
          </div>
        </Card>
      ))}
    </div>
  </div>
</section>
